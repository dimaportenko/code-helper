{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "code-helper",
    "version": "0.0.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/status-icon.ico",
      "iconAsTemplate": true,
      "menuOnLeftClick": true,
      "title": "Code Helper"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/screenshots/*"]
      },
      "window": {
        "setCursorVisible": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.dimaportenko.code-helper",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "code-helper",
        "width": 800,
        "height": 600
      }
    ]
  }
}
